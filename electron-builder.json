{
  "productName": "hot-dock",
  "directories": {
    "output": "app-builds"
  },
    "files": [
      "!**/*",
      "node_modules",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.md",
      "!**/*.lock",
      "!**/*.js.map",
      "dist"
    ],
  "win": {
    "icon": "dist",
    "publish": ["github"],
    "target": [
      "portable",
      "nsis-web"
    ]
  },
  "mac": {
    "icon": "dist",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
